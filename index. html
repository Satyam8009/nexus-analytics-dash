<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nexus Dash | Satyam Kumar Portfolio</title>
    <script src="https://unpkg.com/react@18/umd/react.development.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/recharts/umd/Recharts.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700;800&display=swap');
        body { font-family: 'Plus Jakarta Sans', sans-serif; }
        .glass { background: rgba(255, 255, 255, 0.7); backdrop-filter: blur(10px); }
    </style>
</head>
<body class="bg-[#f1f5f9] transition-colors duration-300">
    <div id="root"></div>

    <script type="text/babel">
        const { useState, useEffect, useMemo } = React;
        const { AreaChart, Area, XAxis, YAxis, CartesianGrid, Tooltip, ResponsiveContainer } = Recharts;

        // --- Mock Data ---
        const REVENUE_DATA = [
            { month: 'Jan', sales: 4000, profit: 2400 },
            { month: 'Feb', sales: 3000, profit: 1398 },
            { month: 'Mar', sales: 5000, profit: 3800 },
            { month: 'Apr', sales: 2780, profit: 3908 },
            { month: 'May', sales: 6890, profit: 4800 },
            { month: 'Jun', sales: 5390, profit: 3800 },
        ];

        const INITIAL_INVOICES = [
            { id: "#INV-001", user: "John Doe", status: "Paid", amount: 1200, date: "2023-10-01" },
            { id: "#INV-002", user: "Jane Smith", status: "Pending", amount: 850, date: "2023-10-05" },
            { id: "#INV-003", user: "Acme Corp", status: "Paid", amount: 4500, date: "2023-10-10" },
            { id: "#INV-004", user: "Global Tech", status: "Overdue", amount: 2100, date: "2023-10-12" },
            { id: "#INV-005", user: "Satyam Ent.", status: "Paid", amount: 9900, date: "2023-10-15" },
        ];

        // --- Components ---
        const SidebarItem = ({ icon, label, active = false }) => (
            <div className={`flex items-center gap-3 p-3.5 rounded-xl cursor-pointer transition-all ${active ? 'bg-indigo-600 text-white shadow-lg shadow-indigo-200' : 'text-slate-500 hover:bg-slate-100'}`}>
                <i className={`fa-solid ${icon} text-lg`}></i>
                <span className="font-semibold text-sm">{label}</span>
            </div>
        );

        const StatCard = ({ title, value, trend, icon, color }) => (
            <div className="bg-white p-6 rounded-3xl border border-slate-100 shadow-sm hover:shadow-md transition-shadow">
                <div className="flex justify-between items-start mb-4">
                    <div className={`h-12 w-12 rounded-2xl ${color} flex items-center justify-center text-white text-xl shadow-inner`}>
                        <i className={`fa-solid ${icon}`}></i>
                    </div>
                    <span className={`text-xs font-bold px-2 py-1 rounded-full ${trend.startsWith('+') ? 'bg-emerald-50 text-emerald-600' : 'bg-rose-50 text-rose-600'}`}>
                        {trend}
                    </span>
                </div>
                <p className="text-slate-500 text-xs font-bold uppercase tracking-wider">{title}</p>
                <h3 className="text-2xl font-extrabold text-slate-900 mt-1">{value}</h3>
            </div>
        );

        // --- Main App ---
        function App() {
            const [search, setSearch] = useState("");
            const [invoices, setInvoices] = useState(INITIAL_INVOICES);
            const [isDark, setIsDark] = useState(false);

            // Logic: Search Filter
            const filteredInvoices = useMemo(() => {
                return invoices.filter(inv => 
                    inv.user.toLowerCase().includes(search.toLowerCase()) || 
                    inv.id.toLowerCase().includes(search.toLowerCase())
                );
            }, [search, invoices]);

            return (
                <div className={`flex min-h-screen ${isDark ? 'bg-slate-950' : 'bg-[#f8fafc]'}`}>
                    
                    {/* Sidebar */}
                    <aside className={`w-72 border-r p-6 hidden lg:block transition-colors ${isDark ? 'bg-slate-900 border-slate-800' : 'bg-white border-slate-200'}`}>
                        <div className="flex items-center gap-3 mb-10 px-2">
                            <div className="h-10 w-10 bg-indigo-600 rounded-xl flex items-center justify-center text-white text-xl font-black italic">N</div>
                            <h2 className={`text-xl font-extrabold tracking-tight ${isDark ? 'text-white' : 'text-slate-900'}`}>NEXUS DASH</h2>
                        </div>
                        <nav className="space-y-2">
                            <SidebarItem icon="fa-chart-pie" label="Overview" active />
                            <SidebarItem icon="fa-wallet" label="Transactions" />
                            <SidebarItem icon="fa-file-invoice" label="Invoices" />
                            <SidebarItem icon="fa-gear" label="Settings" />
                        </nav>
                        <div className="mt-auto pt-10">
                            <div className="bg-indigo-50 p-5 rounded-3xl border border-indigo-100">
                                <p className="text-indigo-900 text-xs font-bold mb-2">PRO PLAN</p>
                                <p className="text-indigo-700 text-[11px] leading-relaxed mb-4">Get unlimited exports and cloud sync.</p>
                                <button className="w-full bg-indigo-600 text-white text-xs font-bold py-2.5 rounded-xl hover:bg-indigo-700">Upgrade Now</button>
                            </div>
                        </div>
                    </aside>

                    {/* Content Area */}
                    <main className="flex-1 p-6 md:p-10 lg:p-12 overflow-y-auto">
                        
                        {/* Top Nav */}
                        <header className="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-10">
                            <div>
                                <h1 className={`text-3xl font-black tracking-tight ${isDark ? 'text-white' : 'text-slate-900'}`}>Satyam's Command Center</h1>
                                <p className="text-slate-500 font-medium">Monitoring your business pulse in real-time.</p>
                            </div>
                            <div className="flex items-center gap-3 bg-white p-2 rounded-2xl shadow-sm border border-slate-100">
                                <div className="relative">
                                    <i className="fa-solid fa-magnifying-glass absolute left-4 top-3.5 text-slate-400"></i>
                                    <input 
                                        type="text" 
                                        placeholder="Quick search..." 
                                        className="bg-slate-50 py-2.5 pl-11 pr-4 rounded-xl outline-none text-sm w-64 focus:ring-2 ring-indigo-500/20"
                                        value={search}
                                        onChange={(e) => setSearch(e.target.value)}
                                    />
                                </div>
                                <button onClick={() => setIsDark(!isDark)} className="h-10 w-10 rounded-xl hover:bg-slate-100 transition-colors text-slate-600">
                                    <i className={`fa-solid ${isDark ? 'fa-sun' : 'fa-moon'}`}></i>
                                </button>
                            </div>
                        </header>

                        {/* Stats Grid */}
                        <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
                            <StatCard title="Revenue" value="$84,232" trend="+12.5%" icon="fa-sack-dollar" color="bg-indigo-600" />
                            <StatCard title="Active Users" value="1,240" trend="+4.2%" icon="fa-users" color="bg-violet-600" />
                            <StatCard title="Total Sales" value="342" trend="-2.1%" icon="fa-cart-shopping" color="bg-pink-600" />
                            <StatCard title="Efficiency" value="98.2%" trend="+0.5%" icon="fa-bolt" color="bg-amber-500" />
                        </div>

                        {/* Chart and Table Section */}
                        <div className="grid grid-cols-1 xl:grid-cols-3 gap-8">
                            
                            {/* Analytics Chart */}
                            <div className={`xl:col-span-2 p-8 rounded-[2.5rem] shadow-sm border ${isDark ? 'bg-slate-900 border-slate-800' : 'bg-white border-slate-100'}`}>
                                <h3 className={`text-lg font-bold mb-8 ${isDark ? 'text-white' : 'text-slate-900'}`}>Revenue Velocity</h3>
                                <div className="h-80 w-full">
                                    <ResponsiveContainer width="100%" height="100%">
                                        <AreaChart data={REVENUE_DATA}>
                                            <defs>
                                                <linearGradient id="colorSales" x1="0" y1="0" x2="0" y2="1">
                                                    <stop offset="5%" stopColor="#6366f1" stopOpacity={0.3}/>
                                                    <stop offset="95%" stopColor="#6366f1" stopOpacity={0}/>
                                                </linearGradient>
                                            </defs>
                                            <CartesianGrid strokeDasharray="3 3" vertical={false} stroke={isDark ? "#334155" : "#f1f5f9"} />
                                            <XAxis dataKey="month" axisLine={false} tickLine={false} tick={{fill: '#94a3b8', fontSize: 12}} dy={10} />
                                            <YAxis axisLine={false} tickLine={false} tick={{fill: '#94a3b8', fontSize: 12}} />
                                            <Tooltip contentStyle={{borderRadius: '16px', border: 'none', boxShadow: '0 10px 15px -3px rgba(0,0,0,0.1)'}} />
                                            <Area type="monotone" dataKey="sales" stroke="#6366f1" strokeWidth={4} fillOpacity={1} fill="url(#colorSales)" />
                                        </AreaChart>
                                    </ResponsiveContainer>
                                </div>
                            </div>

                            {/* Recent Activity / Table */}
                            <div className={`p-8 rounded-[2.5rem] shadow-sm border ${isDark ? 'bg-slate-900 border-slate-800' : 'bg-white border-slate-100'}`}>
                                <div className="flex justify-between items-center mb-8">
                                    <h3 className={`text-lg font-bold ${isDark ? 'text-white' : 'text-slate-900'}`}>Recent Invoices</h3>
                                    <button className="text-indigo-600 text-xs font-black hover:underline uppercase tracking-widest">See All</button>
                                </div>
                                <div className="space-y-6">
                                    {filteredInvoices.map((inv, i) => (
                                        <div key={i} className="flex items-center justify-between group cursor-pointer">
                                            <div className="flex items-center gap-4">
                                                <div className="h-10 w-10 rounded-full bg-slate-100 flex items-center justify-center font-bold text-slate-500 text-xs">
                                                    {inv.user.charAt(0)}
                                                </div>
                                                <div>
                                                    <p className={`text-sm font-bold ${isDark ? 'text-white' : 'text-slate-800'}`}>{inv.user}</p>
                                                    <p className="text-[10px] text-slate-400 font-medium uppercase tracking-tighter">{inv.id} â€¢ {inv.date}</p>
                                                </div>
                                            </div>
                                            <div className="text-right">
                                                <p className={`text-sm font-black ${isDark ? 'text-white' : 'text-slate-900'}`}>${inv.amount}</p>
                                                <span className={`text-[9px] font-bold px-2 py-0.5 rounded-md ${inv.status === 'Paid' ? 'bg-emerald-100 text-emerald-700' : 'bg-amber-100 text-amber-700'}`}>
                                                    {inv.status}
                                                </span>
                                            </div>
                                        </div>
                                    ))}
                                    {filteredInvoices.length === 0 && <p className="text-center text-slate-400 py-10">No records found.</p>}
                                </div>
                            </div>
                        </div>

                    </main>
                </div>
            );
        }

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>
